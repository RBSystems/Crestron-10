PUSH Connected_Client
{	
   strOut="1";
}




RELEASE Connected_Client
{
    strOut="0";
}
         

CHANGE strIn
{
	INTEGER i;
	
	i=atoi(strIn); 
	if (i){
		Connected_Serwer=1;
		CancelWait(WaitOFF);
	}
	else{
		Connected_Serwer=0;
		CancelWait(WaitON);

	}
	BLINK(Connected_Serwer);
	
	if (i=2)
	{
		Connected=0;
	}
}		



