INTEGER_FUNCTION BLINK (integer dig_pulse)
{     
	if (Connected_Serwer){
		Connected=1;
		wait(1500, WaitON){
			Connected=0;
		}
	}
	else
	{
		Connected=1;
		wait(1500, WaitOFF){
			Connected=0;
		}

	}
	return(Connected);	
}

