	amount = atoi(Amount_In_dB);
	symnet_amount = 65535 * (amount + 72) / 84;
}
*/

push Increment
{
	calcValues();
	makestring(SymNet_TX, "CC %ld 1 %ld\x0D\x0A", controller, symnet_amount);
}

push Decrement
{
	calcValues();    
	makestring(SymNet_TX, "CC %ld 0 %ld\x0D\x0A", controller, symnet_amount);
}

