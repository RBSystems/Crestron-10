function calcValues()
{
	controller = atoi(Controller_Number);
	amount = atoi(Amount_In_dB);
	symnet_amount = 780 * amount;
}

/*******************************************************************************************
  Event Handlers
  (Uncomment and declare additional event handlers as needed)
*******************************************************************************************/
